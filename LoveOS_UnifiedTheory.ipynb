axes[0].set_ylabel('Attraction Level')
axes[0].fill_between(range(len(rel_A)), rel_A, color='#00FFFF', alpha=0.1)
axes[0].legend()

# Plot 2: Business Success
axes[1].plot(biz_A, color='#00FF00', linewidth=2, label='Policy A: Love-OS (Honest)')
axes[1].plot(biz_B, color='#FF0055', linewidth=2, label='Policy B: Ego-Driven (Defensive)', linestyle='--')
axes[1].set_title('Domain 2: Business Negotiation\n(Deal Probability vs Strategy)')
axes[1].set_xlabel('Time (Negotiation Steps)')
axes[1].set_ylabel('Success Probability')
axes[1].legend()

